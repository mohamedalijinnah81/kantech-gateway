<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Global paths -->
    <add key="Root.Inbound"      value="D:\Kantech\Inbound" />
    <add key="Root.Completed"    value="D:\Kantech\Completed" />
    <add key="Root.Error"        value="D:\Kantech\Error" />
    <add key="Root.Logs"         value="D:\Kantech\Logs" />

    <!-- File handling -->
    <add key="Csv.Delimiter"     value="," />
    <add key="Csv.HasHeader"     value="true" />
    <add key="File.Pattern"      value="*.csv" />
    <add key="Move.Completed.SubFolderPerJob" value="true" />

    <!-- Scheduling (global defaults) -->
    <add key="Schedule.Mode"         value="Timer" />
    <add key="Schedule.IntervalSec"  value="300" />
    <add key="Schedule.TwiceDailyTimes" value="09:00,21:00" />
    <add key="Schedule.DailyTime"    value="02:00" />

    <!-- Logging -->
    <add key="Log.RollDaily" value="true" />
    <add key="Log.Level"     value="Info" />

    <!-- Job root folders (relative to Root.Inbound unless absolute) -->
    <add key="Job.Deactivate.Source"          value="Deactivate" />
    <add key="Job.Deactivate.Target"          value="Reactivate" />
    <add key="Job.Deactivate.LogSub"          value="Deactivate" />
    <add key="Job.Deactivate.Schedule"        value="TwiceDaily" />
    <add key="Job.Deactivate.RequiredFields"  value="Card ID,employee ID" />

    <add key="Job.Reactivate.Source"          value="Reactivate" />
    <add key="Job.Reactivate.Target"          value="Completed" />
    <add key="Job.Reactivate.LogSub"          value="Reactivate" />
    <add key="Job.Reactivate.Schedule"        value="TwiceDaily" />
    <add key="Job.Reactivate.RequiredFields"  value="Card ID,employee ID" />

    <add key="Job.Resignee.Source"            value="Resignee" />
    <add key="Job.Resignee.Target"            value="Completed" />
    <add key="Job.Resignee.LogSub"            value="Resignee" />
    <add key="Job.Resignee.Schedule"          value="TwiceDaily" />
    <add key="Job.Resignee.RequiredFields"    value="Card ID,employee ID,last day" />

    <add key="Job.ProfileUpdate.Source"       value="Profile update" />
    <add key="Job.ProfileUpdate.Target"       value="Completed" />
    <add key="Job.ProfileUpdate.LogSub"       value="Profile update" />
    <add key="Job.ProfileUpdate.Schedule"     value="TwiceDaily" />
    <add key="Job.ProfileUpdate.RequiredFields" value="employee ID,dept,designation,location,etc" />

    <add key="Job.AccessUpdate.Source"        value="Access update" />
    <add key="Job.AccessUpdate.Target"        value="Completed" />
    <add key="Job.AccessUpdate.LogSub"        value="Access update" />
    <add key="Job.AccessUpdate.Schedule"      value="TwiceDaily" />
    <add key="Job.AccessUpdate.RequiredFields" value="Card ID,employee ID,site link name,access level" />

    <add key="Job.NewProfile.Source"          value="New profile update" />
    <add key="Job.NewProfile.Target"          value="Completed" />
    <add key="Job.NewProfile.LogSub"          value="Profile update" />
    <add key="Job.NewProfile.Schedule"        value="TwiceDaily" />
    <add key="Job.NewProfile.RequiredFields"  value="employee ID,name,dept,designation,location,Card ID" />

    <add key="Job.NewAccess.Source"           value="New access update" />
    <add key="Job.NewAccess.Target"           value="Completed" />
    <add key="Job.NewAccess.LogSub"           value="Access update" />
    <add key="Job.NewAccess.Schedule"         value="TwiceDaily" />
    <add key="Job.NewAccess.RequiredFields"   value="Card ID,employee ID,site link name,access level" />

    <add key="Job.VendorDaily.Source"         value="Daily update" />
    <add key="Job.VendorDaily.Target"         value="Completed" />
    <add key="Job.VendorDaily.LogSub"         value="Daily update" />
    <add key="Job.VendorDaily.Schedule"       value="Daily" />
    <add key="Job.VendorDaily.RequiredFields" value="Card ID,employee ID" />

	<!-- API Configurations -->

	<!-- Base -->
	<add key="Kantech.ServerIP" value="192.168.0.10" />
	<add key="Kantech.ServerPort" value="8080" />

	<!-- Login -->
	<add key="Kantech.ServerUsername" value="admin" />
	<add key="Kantech.ServerPassword" value="password123" />
	<add key="Kantech.ConnectPartner" value="MyPartnerApp" />

    <add key="Kantech.Api.DeactivateEndpoint" value="/user/deactivate" />
    <add key="Kantech.Api.ReactivateEndpoint" value="/user/reactivate" />
    <add key="Kantech.Api.ResigneeEndpoint" value="/user/resignee" />
    <add key="Kantech.Api.NewAccessEndpoint" value="/access/new" />
    <add key="Kantech.Api.NewProfileEndpoint" value="/profile/new" />
    <add key="Kantech.Api.ProfileUpdateEndpoint" value="/profile/update" />
    <add key="Kantech.Api.VendorDailyEndpoint" value="/vendor/daily" />
    <add key="Kantech.Api.AccessUpdateEndpoint" value="/access/update" />
  </appSettings>
</configuration>